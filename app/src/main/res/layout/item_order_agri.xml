<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_agri"
            android:layout_width="140dp"
            android:layout_height="90dp"
            android:src="@color/backround" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_agri"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_tensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/tv_gia"
                android:layout_width="194dp"
                android:layout_height="21dp"
                android:text="Đơn giá: " />

            <TextView
                android:id="@+id/tv_soluong_mua"
                android:layout_width="194dp"
                android:layout_height="21dp"
                android:text="Số lượng mua:" />
            <TextView
                android:id="@+id/tv_thanhtien"
                android:layout_width="194dp"
                android:layout_height="21dp"
                android:text="Thành tiền:"
                android:textColor="@color/red"/>


        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>