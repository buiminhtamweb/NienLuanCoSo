        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="27dp"
        tools:ignore="MissingConstraints" />


    <android.support.v7.widget.RecyclerView
