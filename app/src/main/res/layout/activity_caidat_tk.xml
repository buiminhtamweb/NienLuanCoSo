<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround_grey">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:titleTextColor="@color/white"
            app:title="Cập nhật tài khoản"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_anhdaidien"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/backround"/>

    <TextView
        android:layout_margin="8dp"
        android:layout_gravity="center_horizontal"
        android:text="Thay đổi ảnh đại diện"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearlayout_tk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">


            <TextView
                android:text="Họ tên"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_td_hoten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingRight="20dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="left|center_vertical"
                android:paddingStart="20dp"
                android:text="Bui Minh Tam"
                android:textAllCaps="false"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <TextView
                android:text="Mật khẩu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_td_matkhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingRight="20dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="left|center_vertical"
                android:paddingStart="20dp"
                android:text="Thay đổi mật khẩu"
                android:textAllCaps="false" />

            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Năm sinh"/>

            <Button
                android:id="@+id/btn_td_namsinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingRight="20dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="left|center_vertical"
                android:paddingStart="20dp"
                android:text="29/09/1995"
                android:textAllCaps="false" />

            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"/>

            <Button
                android:id="@+id/btn_td_sdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingRight="20dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="left|center_vertical"
                android:paddingStart="20dp"
                android:text="09090900909"
                android:textAllCaps="false" />

            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"/>

            <Button
                android:id="@+id/btn_td_diachi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingRight="20dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="left|center_vertical"
                android:paddingStart="20dp"
                android:text="Cần Thơ"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>