<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backround_grey">


    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="5dp"
        android:background="@color/colorPrimary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/backround"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/tv_hoten_user"/>

        <TextView
            android:id="@+id/tv_hoten_user"
            android:layout_marginBottom="10dp"
            android:text="Minh Tâm Bùi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/btn_login"/>

        <TextView
            android:id="@+id/btn_login"
            android:textColor="@color/white"
            android:background="@color/no_color"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="Đăng nhập"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button

            android:drawableStart="@drawable/ic_history_black_24dp"
            android:paddingStart="20dp"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lịch sử thanh toán"
            android:textAllCaps="false"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <Button
            android:layout_marginTop="1dp"
            android:drawableLeft="@drawable/ic_favorite_black_24dp"
            android:paddingStart="20dp"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách yêu thích"
            android:textAllCaps="false" />
        <Button
            android:layout_marginTop="1dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:paddingStart="20dp"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cài đặt tài khoản"
            android:textAllCaps="false" />

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:drawableLeft="@drawable/ic_settings_black_24dp"
            android:paddingStart="20dp"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cài dặt"
            android:textAllCaps="false" />

        <Button
            android:layout_marginTop="1dp"
            android:drawableLeft="@drawable/ic_help_black_24dp"
            android:paddingStart="20dp"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hướng dẫn sử dụng"
            android:textAllCaps="false" />

        <Button
            android:drawableLeft="@drawable/ic_feedback_black_24dp"
            android:paddingStart="20dp"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phản hồi về ứng dụng"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>