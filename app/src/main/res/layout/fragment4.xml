<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround_grey"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:background="@color/primaryColor"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_above="@+id/tv_hoten_user"
            android:layout_alignParentRight="true"
            android:src="@drawable/backround" />

        <TextView
            android:id="@+id/tv_hoten_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_login"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:text="Minh Tâm Bùi" />

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/no_color"
            android:text="Đăng nhập"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearlayout_tk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_lichsudathang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ic_history_black_24dp"
            android:gravity="left|center_vertical"
            android:paddingStart="20dp"
            android:text="Lịch sử thanh toán"
            android:textAllCaps="false"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <Button
            android:id="@+id/btn_danhsachyeuthich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_favorite_black_24dp"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:paddingStart="20dp"
            android:text="Danh sách yêu thích"
            android:textAllCaps="false"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/btn_caidat_tk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:paddingStart="20dp"
            android:text="Cài đặt tài khoản"
            android:textAllCaps="false"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_caidat_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_settings_black_24dp"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:paddingStart="20dp"
            android:text="Cài dặt"
            android:textAllCaps="false"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/btn_huongdan_sudung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_help_black_24dp"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:paddingStart="20dp"
            android:text="Hướng dẫn sử dụng"
            android:textAllCaps="false"
            tools:ignore="RtlSymmetry" />

        <Button
            android:layout_marginTop="1dp"
            android:id="@+id/btn_phanhoi_ungdung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_feedback_black_24dp"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:paddingStart="20dp"
            android:text="Phản hồi về ứng dụng"
            android:textAllCaps="false"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

</LinearLayout>