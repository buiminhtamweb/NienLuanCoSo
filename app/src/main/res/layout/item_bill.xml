<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_ms_hoadon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Hóa đơn: 09090909890809"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_nguoiban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người bán: A nguyen Văn" />

        <TextView
            android:id="@+id/tv_ngayban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày bán: 20/9/2018" />

        <TextView
            android:id="@+id/tv_tongtien_hd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: 20000000 VND"
            android:textColor="@color/red" />

    </LinearLayout>


</android.support.v7.widget.CardView>