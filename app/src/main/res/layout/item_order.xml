<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="136dp"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_agri"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:src="@color/backround" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_agri"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_tensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/tv_gia"
                android:layout_width="194dp"
                android:layout_height="21dp"
                android:text="Đơn giá: " />

            <TextView
                android:id="@+id/tv_soluong_mua"
                android:layout_width="194dp"
                android:layout_height="21dp"
                android:text="Số lượng mua:" />
            <TextView
                android:id="@+id/tv_thanhtien"
                android:layout_width="194dp"
                android:layout_height="21dp"
                android:text="Thành tiền:"
                android:textColor="@color/red"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/img_agri"
            android:paddingStart="8dp">

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:contentDescription="Edit"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_edit_black_24dp" />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:background="@color/red"
                android:baselineAligned="false"
                android:contentDescription="Delete"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_delete_black_24dp" />
        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>